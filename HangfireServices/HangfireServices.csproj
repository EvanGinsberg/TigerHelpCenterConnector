      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
    <Content Update="MarkersFiles\StaffMarker.json">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
    <Content Update="MarkersFiles\StaffMarkerMaster.json">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
